.header--logobox
  width: 100%

.header--nav
  width: 100%
  height: 2rem
  display: none
  top: 3rem
  left: 0
  z-index: 50

.nav--menu
  height: 2rem
  line-height: 2rem

.nav--item
  height: 2rem
  display: block
  background-color: whiteBackgroundColor
  color: defaultThemeColor

  & a
    height: 2rem
    line-height: 2rem
    font-size: 1rem
    color: defaultThemeColor
    border-bottom: 1px solid #E3E3E3

.header--mobilenav
  display: block

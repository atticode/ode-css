.section
  padding-top: 0
  padding-right: 16rem
  position: relative
  top: 0
  left: 0
  background-color: defaultBackgroundColor

.section--box
  padding: .8rem
  margin-bottom: 1rem
  background-color: whiteBackgroundColor

.section--title
  text-align: center
  padding-bottom: .4rem


.section--list
  width: 15rem
  padding: 0.8rem
  position: absolute
  top: 0
  right: 0
  border: 1px solid #E6E6E6
  background-color: whiteBackgroundColor

.section--list--title 
  color: #666
  background-color: #cde6c7
  font-weight: 500
  text-align: center
  padding: 0.2rem 0

.section--list--subtitle
  color: titleColor
  height: 1.3rem
  line-height: 1.3rem
  margin-top: 0.4rem
  margin-bottom: 0.3rem
  border-bottom: 1px solid titleColor

.section--list ul
  padding-left: .6rem

.section--list--item
  font-size: .8rem
  margin-bottom: .3rem
  border-bottom: 1px solid #E8E8E8

.section--list--item a
  display: block
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.section--list--item .date
  color: #969696
  font-size: .6rem

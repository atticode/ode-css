.alltaxonomies
  width: 100%
  // max-width: 1000px
  padding: 1rem
  margin: 0 auto
  background-color: whiteBackgroundColor

.alltaxonomies--title
  color: titleColor
  border-bottom: 1px solid titleColor
  margin-bottom: 0.8rem

.alltaxonomies--name
  display: block
  line-height: 1.5rem
  margin-top: 2rem
  font-size: 1.5rem

.alltaxonomies li
  line-height: 1.2rem

.alltaxonomies--sublist
  background-color: defaultBackgroundColor
  padding: 0.3rem 0.5rem
  margin-top: 1rem

.alltaxonomies--item
  padding: 0.3rem
  padding-left: 0
  margin-left: 1rem
  margin-bottom: 0.5rem
  border-bottom: 1px solid defaultBackgroundColor
